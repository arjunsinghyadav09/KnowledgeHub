<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AndroidActivity">


    <TextView
        android:id="@+id/textAndroid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="cursive"

        android:text="iOS App Development"
        android:textColor="@color/design_default_color_primary_dark"
        android:textColorHighlight="@color/material_dynamic_neutral10"
        android:textSize="42sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:elevation="12dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ios_app" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <TextView
            android:id="@+id/textandroidStudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:fontFamily="cursive"
            android:layout_marginTop="20dp"
            android:text="iOS application development is the process of making mobile applications for Apple hardware, including iPhone, iPad and iPod Touch. The software is written in the Swift programming language or Objective-C and then deployed to the App Store for users to download. Apple iOS provides a user-friendly interface that uses multi-touch gestures like swipe, tap, pinch, etc., to facilitate the users interacting with the applications. The users can trigger any event using switches, buttons and sliders. It uses internal accelerometers to respond to shaking the device or rotating in 3D. The interface home screen is the primary navigation and information hub that contains app icons and widgets to launch the particular applications directly from the home screen.
"
            android:textSize="20sp" />

    </ScrollView>

    <TextView
        android:id="@+id/textTechStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tech Stack :"
        android:textStyle="italic"
        android:textSize="30sp"
        android:textColor="@color/material_dynamic_neutral_variant0"
        android:fontFamily="serif-monospace"
        android:layout_gravity="center"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:elevation="12dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imageKotlin"
            android:layout_width="165dp"
            android:layout_height="69dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/swiftt" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-69dp"
        android:elevation="12dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imageJava"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="-7dp"
            android:src="@drawable/flutter" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:elevation="12dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imageXML"
            android:layout_width="160dp"
            android:layout_height="135dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/objectivec" />

    </androidx.cardview.widget.CardView>

</LinearLayout>