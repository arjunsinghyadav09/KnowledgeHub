<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Flower_girl"
    tools:context=".WebActivity">


    <TextView
        android:id="@+id/textWebDev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="62sp"
        android:fontFamily="cursive"
        android:textColor="@color/white"
        android:text="Web Development" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/imagewebDev"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/web" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textColor="@color/pearl"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:text="Web Development refers to the creating, building, and maintaining of websites. It includes aspects such as web design, web publishing, web programming, and database management. It is the creation of an application that works over the internet i.e. websites." />

    <TextView
        android:id="@+id/textTechStackWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/OffWhite"
        android:fontFamily="serif-monospace"
        android:textSize="35sp"
        android:text="Tech Stack" />

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginLeft="80dp"
        android:elevation="12dp"
        app:cardCornerRadius="40dp">
        <ImageView
        android:id="@+id/imageWeb"
        android:layout_width="200dp"
        android:layout_marginLeft="12dp"
        android:scaleType="centerCrop"
        android:layout_height="100dp"
        android:src="@drawable/hcj"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:elevation="12dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/imagewebNode"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:src="@drawable/node" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="-120dp"
        android:elevation="12dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/imagewebReact"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="-10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/react" />

    </androidx.cardview.widget.CardView>

</LinearLayout>